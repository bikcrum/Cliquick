<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bikrampandit.cliquick">

    <uses-sdk tools:overrideLibrary="android.support.customtabs, com.facebook, com.mzelzoghbi.zgallery, com.androidhiddencamera, com.google.android.gms.ads.impl, com.google.android.gms.ads, com.google.android.gms.clearcut, com.google.android.gms.base, com.google.android.gms.tasks, com.google.android.gms.gass, com.google.android.gms, edu.cmu.pocketsphinx, com.chaos.view" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Service.MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Service.ImageCaptureService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Service.VideoRecorderService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Utility.Setting"
            android:label="Setting"
            android:parentActivityName=".Activity.MainActivity">

        </activity>
        <activity
            android:name=".Activity.GalleryGrid"
            android:label="Gallery"
            android:parentActivityName=".Activity.MainActivity">

        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".Activity.GalleryFullscreen"
            android:label="Gallery"
            android:parentActivityName=".Activity.MainActivity">

        </activity>
    </application>

</manifest>